<div class="container">
  <div class="row">
    <div class="col-md-11">
      <div class="pull-right">
        <%= link_to("发起活动", new_admin_job_path, :class => "btn btn-default" ) %>
      </div>

      <br><br>

      <table class="table table-bordered">

        <thead>
              <tr>
                  <td>
                      交易物品
                  </td>

                  <td>
                    收到回复数量
                  </td>
                  <td>
                      交易金额
                  </td>
                  <td>
                      交易区域
                  </td>
                  <td>
                      管理选项
                  </td>
                  <td>
                      发布时间
                  </td>
              </tr>
          </thead>

        <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= render_job_status(job) %>
            <%= link_to(job.title, admin_job_path(job)) %>
          </td>
          <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
              <td> <%= job.wage_lower_bound %> </td>
              <td> <%= job.wage_upper_bound %> </td>
          <td>
            <%= link_to("编辑", edit_admin_job_path(job)) %>
            <%= link_to("删除", admin_job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }) %>

            <% if job.is_hidden %>

                <%= link_to("公开", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-default") %>
              <% else %>
                <%= link_to("隐藏", hide_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-default") %>
              <% end %>

          </td>
          <td>
            <%= job.created_at %>
          </td>
        </tr>
        <% end %>
      </table>

      <div style="text-align: left;margin-top: 150px; margin-bottom:100px">
    </div>

  </div>

</div>

